{
  "name": "thesia",
  "productName": "thesia",
  "version": "0.1.0",
  "description": "Multi-track Spectrogram / Waveform Viewer. This project uses electron-react-boilerplate (https://github.com/electron-react-boilerplate/electron-react-boilerplate)",
  "keywords": [
    "multi-track",
    "spectrogram",
    "waveform",
    "viewer"
  ],
  "homepage": "https://github.com/Sytronik/thesia#readme",
  "bugs": {
    "url": "https://github.com/Sytronik/thesia/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sytronik/thesia.git"
  },
  "license": "MIT",
  "author": {
    "name": "Sytronik",
    "email": "sytronik210@gmail.com",
    "url": "https://sytronik.github.io"
  },
  "contributors": [
    {
      "name": "Crackyachae",
      "email": "crackyachae@gmail.com",
      "url": "https://crackyachae.github.io"
    },
    {
      "name": "KwonWonpyo",
      "email": "commi1106@naver.com",
      "url": "https://kwonwonpyo.github.io/Wonpyo-hompage/"
    }
  ],
  "main": "./src/main/main.ts",
  "napi": {
    "binaryName": "thesia-backend",
    "package": {
      "name": "thesia-backend"
    },
    "targets": [
      "aarch64-apple-darwin",
      "x86_64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "x86_64-pc-windows-msvc"
    ]
  },
  "scripts": {
    "build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
    "build:dll": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.main.prod.ts",
    "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.prod.ts",
    "build:backend": "napi build --platform -o release/backend",
    "build:backend.release": "napi build --platform --release -o release/backend",
    "build:backend.debug": "napi build --platform --profile dev-debug -o release/backend",
    "postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps && npm run build:dll",
    "lint": "cross-env NODE_ENV=development eslint . --ext .js,.jsx,.ts,.tsx",
    "package": "ts-node ./.erb/scripts/clean.js dist && npm run build:backend.release && npm run build && electron-builder build --publish never && npm run build:dll",
    "package.debug": "cross-env DEBUG_PROD=true npm run package",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
    "debug": "npm run build:backend.debug && ts-node ./.erb/scripts/check-port-in-use.js && cross-env RUST_BACKTRACE=1 npm run start:renderer",
    "start": "npm run build:backend && ts-node ./.erb/scripts/check-port-in-use.js && npm run start:renderer",
    "start:main": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only .",
    "start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts",
    "clean:backend": "cargo clean",
    "clean": "rm -rf node_modules release/app/node_modules src/node_modules .erb/dll release/backend/*.node",
    "clean:all": "npm run clean:backend && npm run clean",
    "test": "jest"
  },
  "browserslist": [],
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": false,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "release/app/node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.erb/mocks/fileMock.js",
      "\\.(css|less|sass|scss)$": "identity-obj-proxy"
    },
    "setupFiles": [
      "./.erb/scripts/check-build-exists.ts"
    ],
    "testEnvironment": "jsdom",
    "testEnvironmentOptions": {
      "url": "http://localhost/"
    },
    "testPathIgnorePatterns": [
      "release/app/dist",
      ".erb/dll"
    ],
    "transform": {
      "\\.(ts|tsx|js|jsx)$": "ts-jest"
    }
  },
  "dependencies": {
    "electron-debug": "^3.2.0",
    "electron-log": "^4.4.8",
    "electron-settings": "^4.0.4",
    "electron-updater": "^6.1.4",
    "immutability-helper": "^3.1.1",
    "react": "^18.3.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.3.1",
    "react-hotkeys-hook": "^4.5.1",
    "react-router-dom": "^6.27.0",
    "react-tooltip": "^5.28.0",
    "react-use-event-hook": "^0.9.6",
    "throttle-debounce": "^5.0.2",
    "use-device-pixel-ratio": "^1.1.2"
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "@electron/rebuild": "^3.3.0",
    "@napi-rs/cli": "^3.1.3",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.15",
    "@svgr/webpack": "^8.1.0",
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.2",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.5",
    "@types/node": "20.6.2",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/react-test-renderer": "^18.3.0",
    "@types/throttle-debounce": "^5.0.2",
    "@types/webpack-bundle-analyzer": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "browserslist-config-erb": "^0.0.3",
    "chalk": "^4.1.2",
    "concurrently": "^8.2.1",
    "core-js": "^3.32.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "detect-port": "^1.5.1",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "electron-extension-installer": "^1.2.0",
    "electronmon": "^2.0.2",
    "eslint": "^8.49.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-erb": "^4.1.0-0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-import-resolver-webpack": "^0.13.7",
    "eslint-plugin-compat": "^4.2.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^3.0.3",
    "react-refresh": "^0.14.2",
    "react-test-renderer": "^18.3.1",
    "rimraf": "^5.0.1",
    "sass": "^1.67.0",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "typescript": "^5.2.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "build": {
    "productName": "thesia",
    "appId": "com.bremen.thesia",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "copyright": "Copyright Â© 2021 Sytronik",
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "fileAssociations": [
      {
        "ext": "aac",
        "role": "Viewer"
      },
      {
        "ext": "flac",
        "role": "Viewer"
      },
      {
        "ext": "m4a",
        "role": "Viewer"
      },
      {
        "ext": "mp3",
        "role": "Viewer"
      },
      {
        "ext": "oga",
        "role": "Viewer"
      },
      {
        "ext": "ogg",
        "role": "Viewer"
      },
      {
        "ext": "opus",
        "role": "Viewer"
      },
      {
        "ext": "wav",
        "role": "Viewer"
      }
    ],
    "afterSign": ".erb/scripts/notarize.js",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    },
    "extraResources": [
      "./assets/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "sytronik",
      "repo": "thesia"
    }
  },
  "devEngines": {
    "node": ">=16.20.2",
    "npm": ">=8.19.4"
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/**"
    ],
    "logLevel": "quiet"
  }
}
